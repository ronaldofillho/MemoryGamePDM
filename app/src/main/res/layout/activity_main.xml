<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/plano"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Seja Bem-vindo\nJogo da memÃ³ria \nIFPB"
        android:textSize="30sp"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/tentativasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="10 TENTATIVAS"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:gravity="center"/>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true"
        android:rowOrderPreserved="true">
    </GridLayout>

    <Button
        android:id="@+id/reiniciarButton"
        android:layout_width="164dp"
        android:layout_height="62dp"
        android:backgroundTint="@color/black"
        android:layout_gravity="center"
        android:onClick="reiniciarJogo"
        android:text="Reiniciar Jogo" />

</LinearLayout>